{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "~api/*": ["src/api/*"],
            "~assets/*": ["src/assets/*"],
            "~components/*": ["src/components/*"],
            "~const/*": ["src/const/*"],
            "~page/*": ["src/page/*"],
            "~main/*": ["src/main/*"],
            "~models/*": ["src/models/*"],
            "~providers/*": ["src/providers/*"],
            "~public/*": ["public/*"],
            "~scss/*": ["src/scss/*"],
            "~store/*": ["src/store/*"],
            "~types/*": ["src/types/*"],
            "~utils/*": ["src/utils/*"]
        },
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}
